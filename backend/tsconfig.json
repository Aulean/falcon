{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["bun"],
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@auth/*": ["src/auth/*"],
      "@db/*": ["src/db/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["src", "drizzle.config.ts"]
}
